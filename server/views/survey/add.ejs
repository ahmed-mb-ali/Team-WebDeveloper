
<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6"><br>
            <h1><%= title %></h1>

            <form  class="form" method="POST"><br>
                <div class="form-group">
                    <label for="QuestionextField">Question</label>
                    <input type="text" class="form-control"
                    id="QuestionextField"
                    placeholder="Enter a Question"
                    name= "question" required>
                </div>
                
                <div class="form-group">
                    <label for="Option1TextField">Option 1</label>
                    <input type="text" class="form-control"
                    id="Option1TextField"
                    placeholder="Enter Option 1"
                    name= "option1" required>
                </div>

                <div class="form-group">
                    <label for="Option2TextField">Option 2</label>
                    <input type="text" class="form-control"
                    id="Option2TextField"
                    placeholder="Enter Option 2"
                    name= "option2" required>
                </div>

                <div class="form-group">
                    <label for="Option3TextField">Option 3</label>
                    <input type="text" class="form-control"
                    id="Option3TextField"
                    placeholder="Enter Option 3"
                    name= "option3" required>
                </div>

                <div class="form-group">
                    <label for="Option4TextField">Option 4</label>
                    <input type="text" class="form-control"
                    id="Option4TextField"
                    placeholder="Enter Option 4"
                    name= "option4" required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit">Submit</i></button>

                    <a href="/survey-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i>Cancel</a>
                

            </form>
        </div>
        
    </div>
</div>  




<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>
 